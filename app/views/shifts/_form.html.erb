<%= form_with(model: shift) do |form| %>
  <% if shift.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.date_field :date, class:"form-control-sm", placeholder:"Date", required: true %>
  </div>

  <br/>

  <div class="field form-group">
    <%= form.time_field :time_in, class:"form-control-sm", placeholder:"Time in", required: true %>
  </div>

  <br/>

  <div class="field form-group">
    <%= form.time_field :time_out, class:"form-control-sm", placeholder:"Time out", required: true  %>
  </div>

  <br/>

  <div class="field form-group">
    <%= form.number_field :user_id, class:"form-control-sm", value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit button_text, class:"btn btn-secondary" %>
  </div>
<% end %>



