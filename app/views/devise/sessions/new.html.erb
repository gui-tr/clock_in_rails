<h4>Log in</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, class:"form-control-sm", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, class:"form-control-sm", placeholder:"Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
